<div>
  <h1><%= @flat.name %></h1>
  <p><%= @flat.address %></p>
</div>

<div>
  <h3>A bit more about this flat...</h3>
  <p><%= @flat.description %></p>
</div>

<div>
  <h3>Details</h3>
  <div class="d-flex">
    <div>
      <i class="fa-solid fa-house-user"></i><%= @flat.number_of_guests %>
    </div>
    <div>
      <i class="fa-solid fa-sterling-sign"></i><%= @flat.price_per_night %>
    </div>
  </div>
</div>

<div>
  <div>
    <p><b>Book this place!</b></p>
    <p>from</p>
    <p>to</p>
    <button class="btn btn-success">Book</button>
  </div>

  <div class="d-flex">
    <p>share</p>
    <div>
      <i class="fa-brands fa-square-facebook"></i>
      <i class="fa-brands fa-square-twitter"></i>
      <i class="fa-brands fa-square-pinterest"></i>
      <i class="fa-solid fa-square-envelope"></i>
    </div>
  </div>
</div>
